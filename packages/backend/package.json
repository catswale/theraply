{
  "name": "@theraply/backend",
  "version": "1.0.0",
  "description": "",
  "private": "true",
  "workspaces": {
    "nohoist": [
      "**/*",
      "**/*/**"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "@theraply/lib": "*",
    "aws-sdk": "^2.820.0",
    "aws-serverless-express": "^3.3.5",
    "axios": "^0.21.1",
    "body-parser": "^1.17.1",
    "express": "4.17.1",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "jwt-decode": "^3.1.2",
    "stripe": "^8.129.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.70",
    "@types/express": "^4.17.11",
    "@types/node": "14.14.20",
    "@types/stripe-v3": "3.1.23",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3"
  },
  "scripts": {
    "build:lib": "rm -rf ./node_modules/@theraply/lib && cp -a ../lib ./node_modules/@theraply && yarn compile:lib",
    "compile:lib": "cd node_modules/@theraply/lib && tsc -p tsconfig.build.json && cd ../../../",
    "build": "yarn clean && yarn compile && yarn build:lib && yarn zip",
    "zip": "zip -r --exclude=*amplify/backend* --exclude=*amplify/#current-cloud-backend* archive.zip *",
    "start": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc -p tsconfig.build.json",
    "clean": "rm -rf built && rm -f archive.zip",
    "deploy:dev": "yarn build && aws lambda update-function-code --function-name paymentCheckout-dev --zip-file fileb://archive.zip && yarn --force"
  },
  "author": "",
